#include <stdio.h>

int main() {
    
   // ATIVIDADE 1
    
    float raio, area;
    const float pi = 3.14;
    
    printf("Digite o raio do círculo: ");
    scanf("%f", &raio);
    
    area = raio * raio * pi;
    
    printf("A área do círculo é: %f", area);
    
    return 0;
}




#include <stdio.h>

int main() {

  //ATIVIDADE 2
  
   float num1,num2,media;
   
   printf("digite o primeiro numero:");
   scanf("%f", &num1);
   
   printf("digite o segundo numero:");
   scanf("%f", &num2);
   
   media = (num1+num2) / 2;
   
   printf("A media dos numeros %.2f e %.2f e: %.2f", num1, num2, media);
   return 0;
}





#include <stdio.h>

int main() {
    
    //ATIVIDADE 3
  char letra;

  printf("Digite uma letra: ");
  scanf("%c", &letra);

  switch (letra) {
    case 'a':
    case 'e':
    case 'i':
    case 'o':
    case 'u':
      printf("A letra digitada é uma vogal.\n");
      break;
    default:
      printf("A letra digitada é uma consoante.\n");
      break;
  }

  return 0;
}





#include <stdio.h>

int main() {
    //ATIVIDADE 4
    int num1, num2, soma;
    
    printf("Digite o primeiro número: ");
    scanf("%d", &num1);
    
    printf("Digite o segundo número: ");
    scanf("%d", &num2);
    
    soma = num1 + num2;
    
    printf("A soma dos números é:%d", soma);
    
    return 0;
}





#include <stdio.h>

int main() {
    //ATIVIDADE 5
    int num;

    printf("Digite um número inteiro: ");
    scanf("%d", &num);

    printf("Tabuada de %d:\n", num);

    for (int i = 1; i <= 10; i++) {
        printf("%d x %d = %d\n", num, i, num * i);
    }

    return 0;
}





#include <stdio.h>

int main() {
    //ATIVIDADE 6
    float celsius, fahrenheit;

    printf("Digite a temperatura em Celsius: ");
    scanf("%f", &celsius);

    fahrenheit = (celsius * 9/5) + 32;

    printf("%.2f graus Celsius equivalem a %.2f graus Fahrenheit\n", celsius, fahrenheit);

    return 0;
}




#include <stdio.h>

int main() {
    
    //ATIVIDADE 7
    char c1, c2;
    
    printf("Digite o primeiro caractere: ");
    scanf("%c", &c1);
    
    printf("Digite o segundo caractere: ");
    scanf(" %c", &c2);
    
    if (c1 == c2) {
        printf("Os caracteres digitados são iguais.\n");
    } else {
        printf("Os caracteres digitados são diferentes.\n");
    }
    
    return 0;
}






#include <stdio.h>

int main() {
    
    //ATIVIDADE 8
    char letra;
    
    printf("Digite uma letra: ");
    scanf("%c", &letra);
    
    if (letra == 'a' || letra == 'e' || letra == 'i' || letra == 'o' || letra == 'u' ||
        letra == 'A' || letra == 'E' || letra == 'I' || letra == 'O' || letra == 'U') {
        printf("A letra digitada eh uma vogal.\n");
    } else {
        printf("A letra digitada eh uma consoante.\n");
    }
    
    return 0;
}
